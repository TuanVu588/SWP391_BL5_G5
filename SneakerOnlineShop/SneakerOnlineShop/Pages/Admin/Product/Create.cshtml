@page
@model SneakerOnlineShop.Pages.Admin.Product.CreateModel
@{
    SneakerOnlineShop.Models.Account accSession = new SneakerOnlineShop.Models.Account();
    if (HttpContext.Session.GetString("account") != null)
    {
        accSession = JsonSerializer.Deserialize<SneakerOnlineShop.Models.Account>(HttpContext.Session.GetString("account"));
    }
}
<div id="content-left">
	<ul>
		<a href="~/admin/dashboard">
			<li>Dashboard</li>
		</a>
		<a href="~/admin/order/index?empId=@accSession.EmployeeId">
			<li>Orders</li>
		</a>
		<a href="~/admin/product/index">
			<li>Products</li>
		</a>
		<a href="#">
			<li>Customers</li>
		</a>
	</ul>
</div>
<div id="content-right">
	<div id="content-main">

		<div class="path-admin">CREATE A NEW PRODUCT</b></div>
        <div class="msg-error" style="text-align:left">
            @ViewData["msg"]
        </div>
        <div class="content-main">
            <form id="content-main-product" method="post">
                <div class="content-main-1">
                    <label>Product name (*):</label><br/>
                    <input type="text" asp-for="Product.ProductName"><br/>
                    <span class="msg-error" asp-validation-for="Product.ProductName"></span><br />
                    <label>Unit price:</label><br/>
                    <input type="text" asp-for="Product.UnitPrice"><br/>
                    <label>Size:</label><br />
                    <input type="text" asp-for="Product.Size"><br />
                    <label>Unit Color:</label><br />
                    <input type="text" asp-for="Product.Color"><br />
                    <label>Quantity per unit:</label><br/>
                    <input type="text" asp-for="Product.Color"><br />
                    <label>Description:</label><br />
                    <input type="text" asp-for="Product.Description"><br/>
                    <label>Units in stock (*):</label><br/>
                    <input type="text" asp-for="Product.UnitsInStock"><br/>
                    <span class="msg-error" asp-validation-for="Product.UnitsInStock"></span><br />
                </div>
                <div class="content-main-1">
                    <label>Category (*):</label><br/>
                    <select asp-for="Product.CategoryId">
                        @foreach(var category in (List<Category>)ViewData["categories"])
						{
							<option value="@category.CategoryId">@category.CategoryName</option>
						}
                    </select>
                    <br/>
                    <span class="msg-error" asp-validation-for="Product.CategoryId"></span><br />
                   
                    <label>Units on order:</label><br/>
                    <input type="text" name="txtUnitsOnOrder" id="" disabled><br/>                  
                    <input type="submit" value="Save"/>
                </div>
            </form>
        </div>

	</div>
</div>

