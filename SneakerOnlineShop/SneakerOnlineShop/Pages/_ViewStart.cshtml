@{
    SneakerOnlineShop.Models.Account accSession = new SneakerOnlineShop.Models.Account();
    if(Context.Session.GetString("account") != null)
    {
        accSession = JsonSerializer.Deserialize<SneakerOnlineShop.Models.Account>(Context.Session.GetString("account"));
        if (accSession.RoleId != 1)//Admin or Employee
        {
            Layout = "_Layout2";
        }
        else
        {
            Layout = "_Layout1";
        } 
    }
    else
    {
        Layout = "_Layout1";
    }

}
