<div id="cart">
    <div id="cart-title">
        <h3>SHOPPING CART</h3>
    </div>
    <div id="cart-content">
        <form method="post" asp-page="/account/cart" asp-page-handler="update">
            @foreach (var item in Model.cart)
        {
            <div class="cart-item">
                <div class="cart-item-infor">
                      @*  @foreach(var i in @item.Product.ProductImages)
                        {
                            <div class="cart-item-img">
                            <img src="~/img/@i.ImagePath" />
                            </div>
                            break;
                        }*@
                        <div class="cart-item-img">
                            <img src="~/img/@item.ProductDTO.PresentImage" />
                    </div>
                    <div class="cart-item-name">
                        <a href="detail.html?id=1">@item.ProductDTO.ProductName</a>
                    </div>
                    <div class="cart-item-price">
                            $@(System.Math.Round(item.Quantity * (decimal)item.ProductDTO.UnitPrice, 0))
                    </div>
                    <div class="cart-item-button">
                            <a asp-page="/account/cart" asp-page-handler="delete" asp-route-proid="@item.ProductDTO.ProductId">Remove</a>
                    </div>
                </div>
                <div class="cart-item-function">
                    <label>Quantity</label>
                        <input type="number" name="quantities" value="@item.Quantity" style="width: 50px;" min="1" />
                </div>
            </div>
        }
            <div id="cart-summary">
                <div class="cart-item-name">
                    <div class="cart-item-button">
                        <input type="submit" value="Save Cart" style="color:seagreen; margin-left:20px" />
                    </div>
                </div>
                <div id="cart-summary-content">Total amount: <span style="color:red">@Model.Total $</span></div>
            </div>

        </form>
    </div>
    
    <div class="msg-error" style="text-align:left">
        @ViewData["msg"]
    </div>
